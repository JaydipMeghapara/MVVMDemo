<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.jaydip.mvvmdemo.api.response.OrderModel" />

        <variable
            name="isCompletedRecord"
            type="Boolean" />

        <variable
            name="isLastRecord"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:id="@+id/itemOrderListCvMain"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/ic_order_bg"-->
        <!--            android:elevation="0dp"-->
        <!--            app:cardCornerRadius="8dp"-->
        <!--            app:cardUseCompatPadding="true"-->
        <!--            app:contentPadding="@dimen/_15sdp"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            card_view:cardElevation="0dp"-->
        <!--            card_view:cardPreventCornerOverlap="false">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemOrderListClContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_order_bg"
            android:padding="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvName"
                style="@style/TextViewMediumBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorTabSelected"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintEnd_toStartOf="@+id/itemOrderListTvOrderNo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvOrderNo"
                style="@style/TextViewSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorBlackLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOrderListIvPickupLocation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_image_bg"
                android:padding="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListTvName"
                app:srcCompat="@drawable/ic_direction"
                app:tint="@color/colorTabSelected"
                tools:src="@drawable/ic_direction" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvPickupLocation"
                style="@style/TextViewExtraSmallBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListIvPickupLocation"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListTvName" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOrderListIvDropLocation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_image_bg"
                android:padding="@dimen/_4sdp"
                android:visibility="@{isCompletedRecord?View.VISIBLE:View.GONE,default=gone}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListIvPickupLocation"
                app:srcCompat="@drawable/ic_location_destination"
                app:tint="@color/colorTabSelected"
                tools:src="@drawable/ic_location_destination" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvDropLocation"
                style="@style/TextViewExtraSmallBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorGrayLight"
                android:visibility="@{isCompletedRecord?View.VISIBLE:View.GONE,default=gone}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListIvDropLocation"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListIvPickupLocation" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOrderListIvTime"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/ic_image_bg"
                android:padding="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListIvDropLocation"
                app:srcCompat="@drawable/ic_time"
                app:tint="@color/colorTabSelected"
                tools:src="@drawable/ic_time" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvTime"
                style="@style/TextViewExtraSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintBottom_toBottomOf="@+id/itemOrderListIvTime"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListIvTime"
                app:layout_constraintTop_toTopOf="@+id/itemOrderListIvTime" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOrderListIvWeight"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/ic_image_bg"
                android:padding="@dimen/_4sdp"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListTvTime"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListIvPickupLocation"
                app:layout_constraintTop_toTopOf="@+id/itemOrderListIvTime"
                app:srcCompat="@drawable/ic_weight"
                app:tint="@color/colorTabSelected"
                tools:src="@drawable/ic_weight" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvWeight"
                style="@style/TextViewExtraSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintBottom_toBottomOf="@+id/itemOrderListIvTime"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListIvWeight"
                app:layout_constraintTop_toTopOf="@+id/itemOrderListIvTime" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOrderListIvPrice"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/ic_image_bg"
                android:padding="@dimen/_4sdp"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListTvWeight"
                app:layout_constraintTop_toBottomOf="@+id/itemOrderListIvPickupLocation"
                app:layout_constraintTop_toTopOf="@+id/itemOrderListIvTime"
                app:srcCompat="@drawable/ic_price"
                app:tint="@color/colorTabSelected"
                tools:src="@drawable/ic_price" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemOrderListTvPrice"
                style="@style/TextViewExtraSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintBottom_toBottomOf="@+id/itemOrderListIvTime"
                app:layout_constraintStart_toEndOf="@+id/itemOrderListIvPrice"
                app:layout_constraintTop_toTopOf="@+id/itemOrderListIvTime" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        </androidx.cardview.widget.CardView>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="@{isLastRecord?View.VISIBLE:View.GONE,default=gone}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemOrderListClContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
