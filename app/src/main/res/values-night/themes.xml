<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SuperSnap.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SuperSnap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Splash theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

<style name="DefaultTextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextViewMediumLargeBlack" parent="DefaultTextView">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextViewMediumBlack" parent="DefaultTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewSmallBlack" parent="DefaultTextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewExtraSmallBlack" parent="DefaultTextView">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="DefaultTextViewWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextViewMediumLargeWhite" parent="DefaultTextViewWhite">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextViewMediumWhite" parent="DefaultTextViewWhite">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewSmallWhite" parent="DefaultTextViewWhite">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewExtraSmallWhite" parent="DefaultTextViewWhite">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="DefaultTextViewTheme">
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextViewMediumLargeTheme" parent="DefaultTextViewTheme">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextViewMediumTheme" parent="DefaultTextViewTheme">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewSmallTheme" parent="DefaultTextViewTheme">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewExtraSmallTheme" parent="DefaultTextViewTheme">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextViewMediumGrey" parent="DefaultTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:color">@color/colorCalDay</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="AlertConfirmationDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="fontFamily">@font/roboto</item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Body.Text
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Title.Text
        </item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="errorTextColor">@color/textError</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlayAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded
        </item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="MyThemeOverlayActivityLogDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.ActivityLog.Dialog.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.ActivityLog.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="MyRoundedThemeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="android:strokeColor">@color/colorAppTheme</item>
        <item name="android:letterSpacing">0</item>

    </style>
    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="styleLoginBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_46sdp</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextTabAp" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start</item>
    </style>
</resources>